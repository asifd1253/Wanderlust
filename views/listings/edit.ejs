<% layout("layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-7 offset-2">
      <h2>Edit Listing</h2>
      <form
        action="/listings/<%= listing._id%>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">Provide a short describtion.</div>
        </div>

        <div class="mb-3">
          Original Image<br />
          <img
            src="<%= listing.image.url %>"
            class="img-thumbnail"
            style="max-width: 200px; height: auto"
          />
        </div>

        <div class="mb-3">
          <label for="imageUrl" class="form-label">Upload New Image</label>
          <input type="file" name="listing[image]" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-sm-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              value="<%= listing.price %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Enter amount.</div>
          </div>
          <div class="mb-3 col-sm-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              value="<%= listing.country %>"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid.</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= listing.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location name should be valid.</div>
        </div>
        <button type="submit" class="btn btn-primary add-btn">
          update Submit</button
        ><br /><br />
      </form>
    </div>
  </div>
</body>
