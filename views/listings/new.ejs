<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-7 offset-2">
    <h2>Create new Listing</h2>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
      </div>
      <!-- Add describtion -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Provide a short describtion.</div>
      </div>
      <!-- Upload Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-sm-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder="Price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter amount.</div>
        </div>

        <div class="mb-3 col-sm-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location name should be valid.</div>
      </div>
      <button type="submit" class="btn btn-primary add-btn">Add Listing</button
      ><br /><br />
    </form>
  </div>
</div>
